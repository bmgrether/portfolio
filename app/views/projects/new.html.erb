<h1>Create a new Project item</h1>

<%= form_with(model: @project_item, local: true) do |form| %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :project_title %>
  </div>
  
  <div class="field">
    <%= form.label :subtitle %>
    <%= form.text_field :subtitle, id: :project_subtitle %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body, id: :project_body %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
